@{
    Layout ="_Layout";
}

@using PieeresTreats.Models;
@model IEnumerable<PieeresTreats.Models.Flavor>;

<h1>Flavors for @User.Identity.Name</h1>

@if(Model.Any())
{
    <ul>
    @foreach(Flavor flavor in Model)
    {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
    }
    </ul>
}
else
{
      <h3> No Flavors Have Been Added Yet!</h3>
}


<p>@Html.ActionLink("Add a new Flavor", "Create")</p>
<p>@Html.ActionLink("Home Page", "Index", "Home")